<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TemperatureActivity">

    <!-- Grauer Balken -->
    <View
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#D3D3D3"
        android:layout_alignParentTop="true"/>

    <!-- Zurück-Pfeil -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@id/topBar"
        android:layout_alignStart="@id/topBar"
        android:src="@drawable/back_icon"
        android:onClick="back_main"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true" />

    <!-- Titel -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Temperatur"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_alignTop="@id/topBar"/>

    <!-- DIAGRAMM (AAChartCore) -->
    <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
        android:id="@+id/aaChartView"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/topBar"
        android:layout_marginTop="12dp"
        android:layout_above="@id/switchViewButton"
        android:visibility="gone" />

    <!-- Werte -->
    <LinearLayout
        android:id="@+id/valuePanel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:layout_marginTop="24dp"
        android:layout_above="@id/switchViewButton"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperatur: — °C"
            android:textSize="22sp"
            android:paddingTop="8dp" />

    </LinearLayout>

    <!-- Umschalt-Button-->
    <Button
        android:id="@+id/switchViewButton"
        android:layout_width="200dp"
        android:layout_height="63dp"
        android:layout_above="@id/bottomButtonBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Ansicht wechseln"
        android:onClick="switchView"/>

    <LinearLayout
        android:id="@+id/bottomButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <Button
            android:id="@+id/btnTempHistory"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Verlauf anzeigen"
            android:onClick="openTempHistory" />

        <View
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnSaveTemp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Speichern"
            android:onClick="saveTemperature" />

    </LinearLayout>


</RelativeLayout>
